# Agent Scrivener Environment Configuration
# Copy this file to .env and update with your values

# Deployment Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# AgentCore Runtime Configuration
AGENTCORE_MEMORY_MB=2048
AGENTCORE_TIMEOUT_SECONDS=28800
MAX_CONCURRENT_SESSIONS=10
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=1
MAX_INSTANCES=5

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_scrivener
DB_USERNAME=agent_user
DB_PASSWORD=your_secure_password
DB_SSL_ENABLED=true

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Memory and Session Management
MEMORY_STORE_TYPE=redis
SESSION_TIMEOUT_MINUTES=480

# External API Configuration
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_key
PUBMED_API_KEY=your_pubmed_key
ARXIV_API_KEY=your_arxiv_key

# AWS Infrastructure (Optional - for custom deployments)
AWS_VPC_ID=vpc-12345678
AWS_SUBNET_IDS=subnet-12345678,subnet-87654321
AWS_SECURITY_GROUP_IDS=sg-12345678

# Monitoring and Alerting
CLOUDWATCH_LOG_GROUP=/aws/agentcore/agent-scrivener
CLOUDWATCH_METRICS_ENABLED=true
ALERT_EMAIL=admin@yourcompany.com

# Development/Testing
MOCK_EXTERNAL_APIS=false
TEST_DATA_PATH=./tests/data
PERFORMANCE_TESTING_ENABLED=false